<Window x:Class="MDocReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MDocReader"
        mc:Ignorable="d"
        KeyDown="WindowKeyDown"
        Title="MainWindow" Height="720" Width="1280">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid x:Name="ToolBar" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <Button x:Name="BackBtn" Width="20" Height="20" Margin="5 0 0 0" Click="BackBtnClick">
                    <Button.Background>
                        <ImageBrush ImageSource="pack://application:,,,/Resource/left-black.png" />
                    </Button.Background>
                </Button>
                <Button x:Name="ForwardBtn" Width="20" Height="20" Margin="5 0 0 0" Click="ForwardBtnClick">
                    <Button.Background>
                        <ImageBrush ImageSource="pack://application:,,,/Resource/right-black.png" />
                    </Button.Background>
                </Button>
                <Button x:Name="FileListBtn" Width="20" Height="20" Margin="5 0 0 0" Click="FileListBtnClick">
                    <Button.Background>
                        <ImageBrush ImageSource="pack://application:,,,/Resource/list-view-black.png" />
                    </Button.Background>
                </Button>
                <Button x:Name="ChangeThemeBtn" Width="20" Height="20" Margin="5 0 0 0" Click="ChangeTheme">
                    <Button.Background>
                        <ImageBrush ImageSource="pack://application:,,,/Resource/theme-black.png" />
                    </Button.Background>
                </Button>
            </StackPanel>
        </Grid>
        <WebBrowser x:Name="FileListWebBrowser" Grid.Row="1" Grid.Column="0" Visibility="Collapsed" />
        <GridSplitter x:Name="FileListGridSplitter" Grid.Row="1" Grid.Column="1" Width="4" VerticalAlignment="Stretch" HorizontalAlignment="Center" BorderThickness="1 0" BorderBrush="LightGray" Visibility="Collapsed" />
        <Grid x:Name="DocGrid" Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="35" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="399*" />
                <ColumnDefinition Width="116*"/>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="250" />
            </Grid.ColumnDefinitions>

            <WebBrowser x:Name="MainWebBrowser" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,35" Grid.RowSpan="3" />
            <GridSplitter x:Name="FooterGridSplitter" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Height="4" HorizontalAlignment="Stretch" BorderThickness="0 1" BorderBrush="LightGray" Visibility="Collapsed" Margin="0,0,0,31" Grid.RowSpan="2" />
            <WebBrowser x:Name="FooterWebBrowser" Grid.Row="2" Grid.Column="0" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Visibility="Collapsed" Grid.ColumnSpan="2" />
            <GridSplitter x:Name="SidebarGridSplitter" Grid.Row="0" Grid.RowSpan="3" Grid.Column="1" Width="4" HorizontalAlignment="Left" BorderThickness="1 0" BorderBrush="LightGray" Visibility="Collapsed" Grid.ColumnSpan="3" Margin="230,0,0,0" />
            <WebBrowser x:Name="SidebarWebBrowser" Grid.Row="0" Grid.Column="2" Grid.RowSpan="3" Visibility="Collapsed" Grid.ColumnSpan="2" />
        </Grid>
    </Grid>
</Window>
